<!-- Content Heading -->
<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>

        <!-- Main Message -->
        <%- messages() %>
            <h2>Welcome, <%= accountData.account_firstname %>!</h2>
            <a href="./update/<%= accountData.account_id %>">Update Account Information</a>

            <% if (accountData.account_type==='Employee' || accountData.account_type==='Admin' ) { %>
                <h3>Inventory Management</h3>
                <p><a href="../inv/">Go to Inventory Management</a></p>
                <% } %>
                    <% if (errors) { %>
                        <ul class="notice">
                            <% errors.array().forEach(error=> { %>
                                <li>
                                    <%= error.msg %>
                                </li>
                                <% }) %>
                        </ul>
                        <% } %>

                            <% if ( accountData.account_type==='Admin' ) { %>
                                <h3>Employee Account Management</h3>
                                <p><a href="./employee-management">Go to Employee Management</a></p>
                                <% } %>
                                    <% if (errors) { %>
                                        <ul class="notice">
                                            <% errors.array().forEach(error=> { %>
                                                <li>
                                                    <%= error.msg %>
                                                </li>
                                                <% }) %>
                                        </ul>
                                        <% } %>